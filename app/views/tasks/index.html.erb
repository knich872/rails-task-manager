<h1 class="m-4">Today's Tasks:</h1>

<% @tasks.each do |task| %>
<div class="m-4">
  <div class="m-1">
    <%= task.title %>
    <%= link_to 'More details', task_path(task), class: "mx-2" %>
    <i class="">
      <%= link_to '',
      task_path(task),
      class: "mx-2 fa-solid fa-trash-can",
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>

    </i>
  </div>
</div>
<% end %>

<div class="m-4">
  <%= link_to "+ Add a new task",  new_task_path() %>
</div>
